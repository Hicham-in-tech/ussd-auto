<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#FFFFFF">

    <!-- Simple Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="H.bdh UssD"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginBottom="4dp"/>

    <!-- Developer Info -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dev.hicham boudouch\n0772114836"
        android:textSize="11sp"
        android:gravity="center"
        android:textColor="#666666"
        android:layout_marginBottom="8dp"/>

    <!-- Control Buttons - Simple -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/btnSelectFile"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Select CSV"
            android:textSize="14sp"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnStartProcessing"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Start"
            android:textSize="14sp"
            android:backgroundTint="#4CAF50"
            android:layout_marginStart="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnStopProcessing"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Stop"
            android:textSize="14sp"
            android:backgroundTint="#FF9800"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnClearAll"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Clear All"
            android:textSize="14sp"
            android:backgroundTint="#D32F2F"
            android:layout_marginStart="4dp"/>

    </LinearLayout>

    <!-- Status Line -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ready"
        android:textSize="14sp"
        android:padding="6dp"
        android:textColor="#000000"
        android:background="#E0E0E0"
        android:layout_marginBottom="4dp"/>

    <!-- Statistics -->
    <TextView
        android:id="@+id/tvStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: 0 | Passed: 0 | Failed: 0"
        android:textSize="13sp"
        android:padding="6dp"
        android:textColor="#000000"
        android:background="#F5F5F5"
        android:layout_marginBottom="4dp"/>

    <!-- USSD Message Display -->
    <TextView
        android:id="@+id/tvUssdMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:padding="6dp"
        android:textColor="#1976D2"
        android:background="#E3F2FD"
        android:visibility="gone"
        android:layout_marginBottom="8dp"/>

    <!-- Table Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#607D8B"
        android:padding="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Phone"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:paddingStart="4dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Status"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Response Message"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:paddingStart="4dp"/>

    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:visibility="gone"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="true"/>

    <!-- Records Table -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FAFAFA"/>

    <!-- Footer Developer Info -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Â© dev.hicham boudouch | 0772114836"
        android:textSize="10sp"
        android:gravity="center"
        android:textColor="#999999"
        android:padding="4dp"
        android:background="#F5F5F5"/>

</LinearLayout>
